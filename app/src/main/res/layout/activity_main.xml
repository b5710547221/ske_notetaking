<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">

    <Button
        android:id="@+id/new_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/new_note"/>

    <Button
        android:id="@+id/sort_az"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_az"
        android:layout_toRightOf="@+id/new_button"/>

    <Button
        android:id="@+id/sort_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sort_time"
        android:layout_toRightOf="@+id/sort_az"/>

    <GridView
        android:id="@+id/notes_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="2"
        android:layout_margin="10dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:layout_below="@id/new_button"
        android:layout_above="@+id/delete_button"
        >

    </GridView>

    <Button
        android:id="@+id/delete_all_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Delete all notes"/>

</RelativeLayout>
